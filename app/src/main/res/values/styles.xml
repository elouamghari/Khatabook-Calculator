<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KhatabookCalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/khatabook_button_height</item>
        <item name="android:textSize">@dimen/khatabook_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="KhatabookCalculatorWhiteButton" parent="KhatabookCalculatorButton">
        <item name="android:textColor">@color/deepBlueColor</item>
        <item name="android:background">@drawable/khatabook_white_button_background</item>
    </style>

    <style name="KhatabookCalculatorLightBlueButton" parent="KhatabookCalculatorButton">
        <item name="android:textColor">@color/deepBlueColor</item>
        <item name="android:background">@drawable/khatabook_light_blue_button_background</item>
    </style>

    <style name="KhatabookCalculatorBlueButton" parent="KhatabookCalculatorButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/khatabook_blue_button_background</item>
    </style>

</resources>